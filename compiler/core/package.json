{
  "name": "lonac",
  "version": "0.8.9",
  "description": "Lona cross-platform code compiler",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "bin": "./build/bin.js",
  "files": [
    "build",
    "types",
    "README.md"
  ],
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "bundle": "npm run clean && npm run build && webpack",
    "deploy": "rm -rf ../../studio/LonaStudio/Scripting/Modules/lonac && cp -r build ../../studio/LonaStudio/Scripting/Modules/lonac",
    "format": "bsrefmt --parse=re --print=re --in-place src/**/*.re",
    "prepublishOnly": "yarn clean && yarn build && yarn bundle",
    "snapshotDocs": "node src/main.bs.js documentation --workspace ../../examples/FlatTokens > ../../examples/generated/tokens/documentation.json",
    "snapshotDocs:watch": "nodemon --exec \"yarn snapshotJsTokens\"",
    "snapshotJsTokens": "node src/main.bs.js workspace --target js --workspace ../../examples/FlatTokens --output ../../examples/generated/tokens/react-dom",
    "snapshotJsTokens:watch": "nodemon --exec \"yarn snapshotJsTokens\"",
    "snapshotSwiftTokens": "node src/main.bs.js workspace --target swift --workspace ../../examples/FlatTokens --output ../../examples/generated/tokens/swift",
    "snapshotSwiftTokens:watch": "nodemon --exec \"yarn snapshotSwiftTokens\"",
    "snapshotFlatTokens": "node src/main.bs.js flatten --workspace ../../examples/FlatTokens > ../../examples/generated/FlatTokens/output.json",
    "snapshotFlatTokens:watch": "nodemon --exec \"yarn snapshotFlatTokens\"",
    "snapshotJsDom": "node src/main.bs.js workspace js ../../examples/test ../../examples/generated/test/react-dom --framework=reactdom --styleFramework=styledcomponents",
    "snapshotJsDom:watch": "nodemon --exec \"yarn snapshotJsDom\"",
    "snapshotJsNative": "node src/main.bs.js workspace js ../../examples/test ../../examples/generated/test/react-native --framework=reactnative",
    "snapshotJsNative:watch": "nodemon --exec \"yarn snapshotJsNative\"",
    "snapshotSketch": "node src/main.bs.js workspace js ../../examples/test ../../examples/generated/test/sketchJs --framework=reactsketchapp",
    "snapshotSketch:watch": "nodemon --exec \"yarn snapshotSketch\"",
    "snapshotSwift": "node src/main.bs.js workspace swift ../../examples/test ../../examples/generated/test/swift --generateCollectionView",
    "snapshotSwift:watch": "nodemon --exec \"yarn snapshotSwift\"",
    "snapshotAppkit": "node src/main.bs.js workspace swift ../../examples/test ../../examples/generated/test/appkit --framework=appkit",
    "snapshotAppkit:watch": "nodemon --exec \"yarn snapshotAppkit\"",
    "snapshotTokens": "yarn snapshotFlatTokens && yarn snapshotJsTokens && yarn snapshotSwiftTokens",
    "snapshotComponents": "yarn snapshotSwift && yarn snapshotAppkit && yarn snapshotJsDom && yarn snapshotJsNative && yarn snapshotSketch",
    "snapshot": "yarn snapshotComponents && yarn snapshotTokens && yarn snapshotDocs",
    "snapshot:watch": "nodemon --exec \"yarn snapshot\"",
    "snapshotWebViewer": "yarn snapshotJsDom && cp -R ../../examples/generated/test/react-dom/ ../../examples/LonaViewer/web/src/generated",
    "snapshotWebViewer:watch": "nodemon --exec \"yarn snapshotWebViewer\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "lona",
    "compiler",
    "react"
  ],
  "author": "Devin Abbott <devinabbott@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/airbnb/Lona.git"
  },
  "bugs": {
    "url": "https://github.com/airbnb/Lona/issues"
  },
  "homepage": "https://github.com/airbnb/Lona",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@glennsl/bs-jest": "^0.4.9",
    "@glennsl/bs-json": "^5.0.1",
    "babel-loader": "^8.0.5",
    "bs-glob": "reasonml-community/bs-glob",
    "bs-node": "reasonml-community/bs-node",
    "bs-platform": "^5.2.1",
    "copy-webpack-plugin": "^4.5.1",
    "csscolorparser": "^1.0.3",
    "fs-extra": "^5.0.0",
    "get-stdin": "^5.0.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "nodemon": "^1.19.4",
    "prettier": "dabbott/prettier#28eebd6d150746b91f581e18bef8352e2bae5623",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@lona/serialization": "^0.0.17",
    "lodash.lowerfirst": "^4.3.1",
    "lodash.snakecase": "^4.1.1",
    "memfs": "^2.8.0",
    "svg-transform-parser": "^0.0.1",
    "svgpath": "^2.2.1",
    "svgson-next": "^4.1.6"
  }
}
